---
import Navigation from '../components/Navigation.astro';

export interface Props {
  title?: string;
}

const { title = "Anátema Profético - Ficha de Personagem" } = Astro.props;
const base = import.meta.env.BASE_URL;
const basePath = base.endsWith('/') ? base : `${base}/`;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Ficha de personagem para o sistema de RPG Anátema Profético" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${basePath}favicon.svg`} />
    <link rel="apple-touch-icon" href={`${basePath}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <Navigation />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-bg-primary: #0a0a0f;
    --color-bg-secondary: #12121a;
    --color-bg-tertiary: #1a1a26;
    --color-border: #2a2a3a;
    --color-border-glow: #8b4c8d;
    --color-text-primary: #e8e8f0;
    --color-text-secondary: #b8b8c8;
    --color-text-accent: #d4a5d6;
    --color-accent-primary: #8b4c8d;
    --color-accent-secondary: #6b3c6d;
    --color-accent-glow: #ab6cad;
    --font-heading: 'Cinzel', serif;
    --font-body: 'Inter', sans-serif;
    --font-accent: 'Playfair Display', serif;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    background: var(--color-bg-primary);
    color: var(--color-text-primary);
    line-height: 1.6;
    min-height: 100vh;
    position: relative;
    overflow-x: hidden;
  }

  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: 
      radial-gradient(circle at 20% 30%, rgba(139, 76, 141, 0.08) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, rgba(107, 60, 109, 0.08) 0%, transparent 40%),
      radial-gradient(circle at 50% 50%, rgba(171, 108, 173, 0.05) 0%, transparent 60%),
      linear-gradient(135deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 50%, var(--color-bg-primary) 100%);
    background-attachment: fixed;
    animation: backgroundShift 20s ease-in-out infinite;
  }

  body::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background-image: 
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(139, 76, 141, 0.02) 2px,
        rgba(139, 76, 141, 0.02) 4px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 2px,
        rgba(107, 60, 109, 0.02) 2px,
        rgba(107, 60, 109, 0.02) 4px
      );
    background-attachment: fixed;
    pointer-events: none;
    opacity: 0.3;
  }

  @keyframes backgroundShift {
    0%, 100% {
      background-position: 0% 0%, 100% 100%, 50% 50%;
    }
    50% {
      background-position: 10% 10%, 90% 90%, 45% 55%;
    }
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    color: var(--color-text-primary);
    line-height: 1.2;
  }

  /* Dark mode para checkboxes */
  input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
    appearance: none;
    background: var(--color-bg-tertiary);
    border: 2px solid var(--color-border);
    border-radius: 4px;
    position: relative;
    transition: all 0.2s ease;
  }

  input[type="checkbox"]:hover {
    border-color: var(--color-accent-primary);
    background: rgba(139, 76, 141, 0.1);
  }

  input[type="checkbox"]:checked {
    background: var(--color-accent-primary);
    border-color: var(--color-accent-primary);
  }

  input[type="checkbox"]:checked::after {
    content: '✓';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--color-text-primary);
    font-size: 12px;
    font-weight: bold;
  }

  input[type="checkbox"]:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>

