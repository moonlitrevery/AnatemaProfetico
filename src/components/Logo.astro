<div class="logo-container">
  <div class="logo-wrapper">
    <div class="logo-main">
      <span class="logo-text">ANÁTEMA</span>
      <span class="logo-divider">◊</span>
      <span class="logo-text">PROFÉTICO</span>
    </div>
    <div class="logo-subtitle">Sistema de RPG</div>
    <div class="logo-decoration">
      <div class="logo-line"></div>
      <div class="logo-symbol">◊</div>
      <div class="logo-line"></div>
    </div>
  </div>
</div>

<style>
  .logo-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem 0;
    margin: 2rem 0;
  }

  .logo-wrapper {
    text-align: center;
    position: relative;
  }

  .logo-main {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .logo-text {
    font-family: var(--font-heading);
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--color-text-accent);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-shadow: 
      0 0 30px rgba(139, 76, 141, 0.8),
      0 0 60px rgba(139, 76, 141, 0.5),
      0 4px 20px rgba(0, 0, 0, 0.6);
    position: relative;
    animation: logoGlow 3s ease-in-out infinite;
  }

  .logo-text:first-child {
    animation-delay: 0s;
  }

  .logo-text:last-child {
    animation-delay: 0.5s;
  }

  @keyframes logoGlow {
    0%, 100% {
      text-shadow: 
        0 0 30px rgba(139, 76, 141, 0.8),
        0 0 60px rgba(139, 76, 141, 0.5),
        0 4px 20px rgba(0, 0, 0, 0.6);
    }
    50% {
      text-shadow: 
        0 0 40px rgba(139, 76, 141, 1),
        0 0 80px rgba(139, 76, 141, 0.7),
        0 0 120px rgba(139, 76, 141, 0.4),
        0 4px 20px rgba(0, 0, 0, 0.6);
    }
  }

  .logo-divider {
    font-size: 2rem;
    color: var(--color-accent-primary);
    opacity: 0.8;
    animation: logoPulse 2s ease-in-out infinite;
  }

  @keyframes logoPulse {
    0%, 100% {
      opacity: 0.8;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.2);
    }
  }

  .logo-subtitle {
    font-family: var(--font-accent);
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: 1rem;
    opacity: 0.7;
  }

  .logo-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .logo-line {
    width: 80px;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-accent-primary),
      transparent
    );
    box-shadow: 0 0 10px rgba(139, 76, 141, 0.5);
  }

  .logo-symbol {
    font-size: 1rem;
    color: var(--color-accent-primary);
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .logo-text {
      font-size: 2.5rem;
    }

    .logo-divider {
      font-size: 1.5rem;
    }

    .logo-line {
      width: 50px;
    }
  }
</style>

