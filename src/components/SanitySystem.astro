<script type="module">
  let insanidadeIdCounter = 0;
  let traumaIdCounter = 0;

  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text || '';
    return div.innerHTML;
  }

  function createInsanidadeRow(data = { type: 'temporaria', description: '' }) {
    const id = `insanidade-${insanidadeIdCounter++}`;
    const row = document.createElement('div');
    row.className = 'sanity-row sanity-insanidade-row';
    row.setAttribute('data-sanity-id', id);
    row.innerHTML = `
      <select class="sanity-type-select">
        <option value="temporaria" ${data.type === 'temporaria' ? 'selected' : ''}>TemporÃ¡ria</option>
        <option value="definitiva" ${data.type === 'definitiva' ? 'selected' : ''}>Definitiva</option>
      </select>
      <textarea class="sanity-desc-field" rows="2" placeholder="DescriÃ§Ã£o da insanidade...">${escapeHtml(data.description)}</textarea>
      <button type="button" class="sanity-remove-btn" title="Remover">âœ•</button>
    `;
    row.querySelector('.sanity-remove-btn')?.addEventListener('click', () => row.remove());
    return row;
  }

  function createTraumaRow(data = { description: '' }) {
    const id = `trauma-${traumaIdCounter++}`;
    const row = document.createElement('div');
    row.className = 'sanity-row sanity-trauma-row';
    row.setAttribute('data-trauma-id', id);
    row.innerHTML = `
      <textarea class="sanity-desc-field trauma-desc" rows="2" placeholder="DescriÃ§Ã£o do trauma...">${escapeHtml(data.description)}</textarea>
      <button type="button" class="sanity-remove-btn" title="Remover">âœ•</button>
    `;
    row.querySelector('.sanity-remove-btn')?.addEventListener('click', () => row.remove());
    return row;
  }

  function openPopup() {
    const popup = document.getElementById('sanity-popup');
    if (popup) {
      popup.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    }
  }

  function closePopup() {
    const popup = document.getElementById('sanity-popup');
    if (popup) {
      popup.style.display = 'none';
      document.body.style.overflow = '';
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    document.getElementById('add-insanidade-btn')?.addEventListener('click', () => {
      const row = createInsanidadeRow();
      document.getElementById('sanity-insanidades-container')?.appendChild(row);
    });
    document.getElementById('add-trauma-btn')?.addEventListener('click', () => {
      const row = createTraumaRow();
      document.getElementById('sanity-traumas-container')?.appendChild(row);
    });
    document.getElementById('sanity-close-btn')?.addEventListener('click', closePopup);
    document.querySelector('.sanity-overlay')?.addEventListener('click', closePopup);
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        const popup = document.getElementById('sanity-popup');
        if (popup?.style.display === 'flex') closePopup();
      }
    });

    window.openSanityPopup = openPopup;
    window.closeSanityPopup = closePopup;
    window.getSanityData = function() {
      const insanidades = [];
      document.querySelectorAll('.sanity-insanidade-row').forEach(row => {
        const typeSelect = row.querySelector('.sanity-type-select');
        const desc = row.querySelector('.sanity-desc-field');
        if (typeSelect && desc) {
          insanidades.push({ type: typeSelect.value, description: desc.value.trim() });
        }
      });
      const traumas = [];
      document.querySelectorAll('.sanity-trauma-row').forEach(row => {
        const desc = row.querySelector('.sanity-desc-field');
        if (desc) traumas.push({ description: desc.value.trim() });
      });
      return { insanidades, traumas };
    };
    window.loadSanityData = function(data) {
      const insContainer = document.getElementById('sanity-insanidades-container');
      const traumaContainer = document.getElementById('sanity-traumas-container');
      if (insContainer && data?.insanidades) {
        insContainer.innerHTML = '';
        data.insanidades.forEach(i => {
          insContainer.appendChild(createInsanidadeRow(i));
        });
      }
      if (traumaContainer && data?.traumas) {
        traumaContainer.innerHTML = '';
        data.traumas.forEach(t => {
          traumaContainer.appendChild(createTraumaRow(t));
        });
      }
    };
  });
</script>

<style>
