<script type="module">
  import { addRollEntry, getRollHistory, clearRollHistory } from '../utils/rollHistory';

  const popupsContainer = document.getElementById('dice-roll-popups-container');
  let popupStack = [];
  let popupIdCounter = 0;
  let selectedDice = [];
  let currentHistoryFilter = '';

  function createDicePopup(roll, label, diceType = 'd20', rollType = 'custom') {
    const popupId = `dice-popup-${popupIdCounter++}`;
    const popup = document.createElement('div');
    popup.id = popupId;
    popup.className = 'dice-roll-popup-cascade';
    popup.dataset.popupId = popupId;
    
    let rollText = `<div class="roll-label">${label}</div>`;
    rollText += `<div class="roll-details">`;
    rollText += `<span class="roll-die">${diceType}: ${roll.result}</span>`;
    if (roll.modifier !== 0) {
      const modSign = roll.modifier >= 0 ? '+' : '';
      rollText += ` <span class="roll-modifier">${modSign}${roll.modifier}</span>`;
    }
    rollText += ` = <span class="roll-total">${roll.total}</span>`;
    rollText += `</div>`;
    
    if (roll.critical) {
      rollText += `<div class="roll-status critical">CR√çTICO!</div>`;
    } else if (roll.fumble) {
      rollText += `<div class="roll-status fumble">FALHA CR√çTICA!</div>`;
    }
    
    popup.innerHTML = rollText;
    
    popupsContainer.appendChild(popup);
    popupStack.push({ id: popupId, element: popup });
    
    setTimeout(() => {
      popup.classList.add('show');
    }, 10);
    
    const autoRemoveTimeout = setTimeout(() => {
      removePopup(popupId);
    }, 30000);
    popup.dataset.autoRemoveTimeout = autoRemoveTimeout.toString();
    
    popup.addEventListener('click', (e) => {
      e.stopPropagation();
      removePopup(popupId);
    });
    
    addRollEntry({ label, type: rollType, diceType, result: roll.result, modifier: roll.modifier || 0, total: roll.total, critical: roll.critical, fumble: roll.fumble });
    reorganizePopups();
    
    return popupId;
  }

  function removePopup(popupId) {
    const index = popupStack.findIndex(p => p.id === popupId);
    if (index === -1) return;
    
    const popup = popupStack[index].element;
    const timeoutId = popup.dataset.autoRemoveTimeout;
    if (timeoutId) {
      clearTimeout(parseInt(timeoutId, 10));
    }
    
    popup.classList.remove('show');
    setTimeout(() => {
      popup.remove();
      popupStack.splice(index, 1);
      reorganizePopups();
    }, 300);
  }

  function reorganizePopups() {
    // Popups s√£o organizados automaticamente pelo flexbox column-reverse
    // N√£o precisa mais calcular offsets manualmente
  }

  window.showDiceRollPopup = function(roll, label, diceType = 'd20', rollType = 'custom') {
    createDicePopup(roll, label, diceType, rollType);
  };

  function renderRollHistory() {
    const list = document.getElementById('roll-history-list');
    if (!list) return;
    const entries = getRollHistory(currentHistoryFilter || undefined);
    list.innerHTML = entries.length === 0
      ? '<p class="roll-history-empty">Nenhuma rolagem registrada.</p>'
      : entries.map(e => {
          const time = new Date(e.timestamp).toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
          const typeLabels = { atributo: 'Atributo', pericia: 'Per√≠cia', ataque: 'Ataque', salvamento: 'Salvamento', custom: 'Custom' };
          const badge = e.critical ? ' critical' : e.fumble ? ' fumble' : '';
          return `<div class="roll-history-item${badge}">
            <span class="rh-time">${time}</span>
            <span class="rh-type">${typeLabels[e.type] || e.type}</span>
            <span class="rh-label">${e.label}</span>
            <span class="rh-result">${e.total}${e.critical ? ' [CR√çTICO]' : ''}${e.fumble ? ' [FALHA]' : ''}</span>
          </div>`;
        }).join('');
  }

  document.getElementById('roll-history-button')?.addEventListener('click', () => {
    const popup = document.getElementById('roll-history-popup');
    if (popup) {
      popup.style.display = 'flex';
      document.body.style.overflow = 'hidden';
      renderRollHistory();
    }
  });

  document.querySelector('.roll-history-overlay')?.addEventListener('click', () => {
    document.getElementById('roll-history-popup').style.display = 'none';
    document.body.style.overflow = '';
  });

  document.querySelector('.roll-history-close')?.addEventListener('click', () => {
    document.getElementById('roll-history-popup').style.display = 'none';
    document.body.style.overflow = '';
  });

  document.querySelectorAll('.roll-history-filters .filter-btn').forEach(btn => {
    if (btn.id === 'clear-history-btn') return;
    btn.addEventListener('click', () => {
      document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      currentHistoryFilter = btn.dataset.filter || '';
      renderRollHistory();
    });
  });

  document.getElementById('clear-history-btn')?.addEventListener('click', () => {
    if (confirm('Limpar todo o hist√≥rico de rolagens?')) {
      clearRollHistory();
      renderRollHistory();
    }
  });

  const diceButton = document.getElementById('custom-dice-button');
  const diceMenu = document.getElementById('custom-dice-menu');
  const closeMenuBtn = document.getElementById('close-dice-menu');
  const selectedDiceDisplay = document.getElementById('selected-dice-display');
  const rollAllBtn = document.getElementById('roll-all-dice-btn');
  const bonusInput = document.getElementById('dice-bonus-input');

  function rollDice(sides) {
    return Math.floor(Math.random() * sides) + 1;
  }

  function updateSelectedDiceDisplay() {
    if (!selectedDiceDisplay) return;
    
    if (selectedDice.length === 0) {
      selectedDiceDisplay.innerHTML = '<p class="no-dice-selected">Nenhum dado selecionado</p>';
      if (rollAllBtn) rollAllBtn.disabled = true;
    } else {
      const diceCounts = {};
      selectedDice.forEach(d => {
        diceCounts[d] = (diceCounts[d] || 0) + 1;
      });
      
      const displayItems = Object.entries(diceCounts).map(([dice, count]) => {
        return `<span class="selected-dice-item">${count}${dice}</span>`;
      }).join('');
      
      selectedDiceDisplay.innerHTML = `<div class="selected-dice-list">${displayItems}</div>`;
      if (rollAllBtn) rollAllBtn.disabled = false;
    }
  }

  function openDiceMenu() {
    if (diceMenu) {
      diceMenu.classList.add('show');
      selectedDice = [];
      updateSelectedDiceDisplay();
    }
  }

  function closeDiceMenu() {
    if (diceMenu) {
      diceMenu.classList.remove('show');
      selectedDice = [];
      updateSelectedDiceDisplay();
    }
  }

  if (diceButton) {
    diceButton.addEventListener('click', () => {
      if (diceMenu && diceMenu.classList.contains('show')) {
        closeDiceMenu();
      } else {
        openDiceMenu();
      }
    });
  }

  if (closeMenuBtn) {
    closeMenuBtn.addEventListener('click', closeDiceMenu);
  }

  document.addEventListener('click', (e) => {
    if (diceMenu && diceMenu.classList.contains('show') && 
        !diceMenu.contains(e.target) && 
        diceButton && !diceButton.contains(e.target)) {
      closeDiceMenu();
    }
  });

  document.querySelectorAll('.dice-option-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const diceType = btn.dataset.dice;
      selectedDice.push(diceType);
      updateSelectedDiceDisplay();
    });
  });

  if (rollAllBtn) {
    rollAllBtn.addEventListener('click', () => {
      if (selectedDice.length === 0) return;
      
      const diceCounts = {};
      selectedDice.forEach(d => {
        diceCounts[d] = (diceCounts[d] || 0) + 1;
      });
      
      let total = 0;
      const rollDetails = [];
      
      Object.entries(diceCounts).forEach(([diceType, count]) => {
        const sides = parseInt(diceType.substring(1), 10);
        let diceTotal = 0;
        const rolls = [];
        
        for (let i = 0; i < count; i++) {
          const roll = rollDice(sides);
          rolls.push(roll);
          diceTotal += roll;
        }
        
        total += diceTotal;
        rollDetails.push(`${count}${diceType}: [${rolls.join(', ')}] = ${diceTotal}`);
      });
      
      // Obter b√¥nus do input
      const bonus = bonusInput ? parseInt(bonusInput.value) || 0 : 0;
      const finalTotal = total + bonus;
      
      const combinedRoll = {
        result: total,
        modifier: bonus,
        total: finalTotal,
        critical: false,
        fumble: false,
      };
      
      const label = bonus !== 0 
        ? `Total (${rollDetails.join(' + ')} + ${bonus > 0 ? '+' : ''}${bonus})`
        : `Total (${rollDetails.join(' + ')})`;
      
      createDicePopup(combinedRoll, label, 'Total');
      
      selectedDice = [];
      if (bonusInput) bonusInput.value = '0';
      updateSelectedDiceDisplay();
      closeDiceMenu();
    });
  }
</script>

