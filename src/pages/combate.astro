---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
import Toast from '../components/Toast.astro';

const base = import.meta.env.BASE_URL;
const getUrl = (path: string) => {
  const basePath = base.endsWith('/') ? base.slice(0, -1) : base;
  const cleanPath = path.startsWith('/') ? path.slice(1) : path;
  return cleanPath ? `${basePath}/${cleanPath}` : `${basePath}/`;
};
---

<Layout title="[AP] - Modo Combate">
  <Toast />
  <div class="container" data-page="combate">
    <Logo />
    <div class="logo-subtitle-custom">
      <h2>Modo Combate</h2>
      <p class="combate-desc">Gerencie iniciativas e anotações para mestres</p>
    </div>

    <section class="combate-section">
      <div class="combate-setup">
        <h3 class="combate-subtitle">Adicionar à Iniciativa</h3>
        <div class="add-initiative-row">
          <input type="text" id="combat-name-input" placeholder="Nome (personagem ou monstro)" />
          <input type="number" id="combat-initiative-input" placeholder="Iniciativa" min="0" />
          <button type="button" id="add-initiative-btn" class="add-initiative-btn">+ Adicionar</button>
        </div>
        <div class="combate-actions">
          <button type="button" id="start-combat-btn" class="start-combat-btn" aria-label="Iniciar ou encerrar combate">Iniciar Combate</button>
          <button type="button" id="reset-combat-btn" class="reset-combat-btn" aria-label="Reiniciar ordem de iniciativa">Reiniciar</button>
          <button type="button" id="export-combat-btn" class="export-combat-btn">Exportar JSON</button>
          <label for="import-combat-input" class="import-combat-btn">Importar JSON</label>
          <input type="file" id="import-combat-input" accept=".json" style="display: none;" />
        </div>
      </div>

      <div class="combat-list-section">
        <h3 class="combate-subtitle">Ordem de Iniciativa</h3>
        <div id="combat-list" class="combat-list">
          <!-- Entradas serão adicionadas aqui -->
        </div>
        <p id="combat-empty-msg" class="combat-empty-msg">Adicione personagens e monstros acima e clique em "Iniciar Combate". Após iniciar, clique nos nomes para abrir anotações.</p>
      </div>

      <div id="combat-detail-panel" class="combat-detail-panel" style="display: none;">
        <div class="combat-detail-header">
          <h3 id="combat-detail-title" class="combat-detail-title">Anotações</h3>
          <button type="button" id="close-detail-btn" class="close-detail-btn">✕</button>
        </div>
        <textarea id="combat-detail-notes" class="combat-detail-notes" placeholder="Anote informações sobre este personagem ou monstro: HP, habilidades, táticas..."></textarea>
      </div>
    </section>
  </div>
</Layout>

<script type="module">
  const STORAGE_KEY = 'anatema-combat-state';
  let combatEntries = [];
  let selectedEntryId = null;
  let combatStarted = false;

  function loadFromStorage() {
    try {
      const saved = localStorage.getItem(STORAGE_KEY);
      if (saved) {
        const data = JSON.parse(saved);
        combatEntries = data.entries || [];
        combatStarted = data.combatStarted || false;
      } else {
        combatEntries = [];
        combatStarted = false;
      }
    } catch (e) {
      combatEntries = [];
      combatStarted = false;
    }
  }

  function saveToStorage() {
    localStorage.setItem(STORAGE_KEY, JSON.stringify({
      entries: combatEntries,
      combatStarted,
    }));
  }

  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text || '';
    return div.innerHTML;
  }

  function renderList() {
    const list = document.getElementById('combat-list');
    const emptyMsg = document.getElementById('combat-empty-msg');
    if (!list) return;

    list.innerHTML = '';
    if (combatEntries.length === 0) {
      if (emptyMsg) emptyMsg.style.display = 'block';
      return;
    }
    if (emptyMsg) emptyMsg.style.display = 'none';

    const sorted = [...combatEntries].sort((a, b) => (b.initiative || 0) - (a.initiative || 0));
    sorted.forEach((entry, index) => {
      const item = document.createElement('div');
      const isClickable = combatStarted;
      const isCurrentTurn = combatStarted && index === 0;
      item.className = `combat-list-item ${selectedEntryId === entry.id ? 'selected' : ''} ${isCurrentTurn ? 'current-turn' : ''} ${isClickable ? 'clickable' : ''}`;
      item.dataset.id = entry.id;
      item.setAttribute('role', isClickable ? 'button' : 'listitem');
      item.setAttribute('aria-label', isCurrentTurn ? `${escapeHtml(entry.name)}, turno atual. Clique para anotações.` : escapeHtml(entry.name));
      item.innerHTML = `
        <span class="combat-item-order">${index + 1}º</span>
        <span class="combat-turn-indicator" aria-hidden="true">${isCurrentTurn ? '⚔' : ''}</span>
        <span class="combat-item-name">${escapeHtml(entry.name)}</span>
        <span class="combat-item-initiative">${entry.initiative ?? '-'}</span>
      `;
      item.addEventListener('click', () => {
        if (!combatStarted) return;
        selectedEntryId = entry.id;
        document.getElementById('combat-detail-panel').style.display = 'flex';
        document.getElementById('combat-detail-title').textContent = `Anotações: ${escapeHtml(entry.name)}`;
        const notesEl = document.getElementById('combat-detail-notes');
        notesEl.value = entry.notes || '';
        notesEl.dataset.entryId = entry.id;
        renderList();
      });
      list.appendChild(item);
    });
  }

  function updateStartButton() {
    const btn = document.getElementById('start-combat-btn');
    if (btn) {
      btn.textContent = combatStarted ? 'Encerrar Combate' : 'Iniciar Combate';
      btn.classList.toggle('combat-active', combatStarted);
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    loadFromStorage();
    updateStartButton();
    renderList();

    document.getElementById('add-initiative-btn')?.addEventListener('click', () => {
      const nameInput = document.getElementById('combat-name-input');
      const initInput = document.getElementById('combat-initiative-input');
      const name = nameInput?.value?.trim();
      const initiative = initInput?.value !== '' ? parseInt(initInput?.value, 10) : null;
      if (!name) return;
      combatEntries.push({
        id: `entry-${Date.now()}-${Math.random().toString(36).slice(2)}`,
        name,
        initiative: Number.isNaN(initiative) ? null : initiative,
        notes: '',
      });
      if (nameInput) nameInput.value = '';
      if (initInput) initInput.value = '';
      saveToStorage();
      renderList();
    });

    document.getElementById('start-combat-btn')?.addEventListener('click', () => {
      combatStarted = !combatStarted;
      if (!combatStarted) {
        document.getElementById('combat-detail-panel').style.display = 'none';
        selectedEntryId = null;
      }
      saveToStorage();
      updateStartButton();
      renderList();
    });

    document.getElementById('reset-combat-btn')?.addEventListener('click', () => {
      if (!confirm('Tem certeza que deseja reiniciar? Isso removerá todos os personagens e monstros da ordem de iniciativa.')) return;
      combatEntries = [];
      combatStarted = false;
      selectedEntryId = null;
      document.getElementById('combat-detail-panel').style.display = 'none';
      saveToStorage();
      updateStartButton();
      renderList();
    });

    document.getElementById('export-combat-btn')?.addEventListener('click', () => {
      const json = JSON.stringify({ entries: combatEntries, combatStarted }, null, 2);
      const blob = new Blob([json], { type: 'application/json' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `combate-${new Date().toISOString().split('T')[0]}.json`;
      a.click();
      URL.revokeObjectURL(url);
      if (typeof window.showToast === 'function') window.showToast('Combate exportado', 'success');
    });

    document.getElementById('import-combat-input')?.addEventListener('change', (e) => {
      const file = e.target?.files?.[0];
      if (!file) return;
      const reader = new FileReader();
      reader.onload = (ev) => {
        try {
          const data = JSON.parse(ev.target?.result);
          combatEntries = data.entries || [];
          combatStarted = data.combatStarted || false;
          saveToStorage();
          updateStartButton();
          renderList();
          if (typeof window.showToast === 'function') window.showToast('Combate importado', 'success');
        } catch (err) {
          console.error(err);
          alert('Arquivo inválido.');
        }
      };
      reader.readAsText(file);
      e.target.value = '';
    });

    document.getElementById('close-detail-btn')?.addEventListener('click', () => {
      document.getElementById('combat-detail-panel').style.display = 'none';
      selectedEntryId = null;
      renderList();
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        const panel = document.getElementById('combat-detail-panel');
        if (panel && panel.style.display === 'flex') {
          panel.style.display = 'none';
          selectedEntryId = null;
          renderList();
        }
      }
    });

    document.getElementById('combat-detail-notes')?.addEventListener('input', (e) => {
      const id = e.target.dataset.entryId;
      const entry = combatEntries.find(ent => ent.id === id);
      if (entry) {
        entry.notes = e.target.value;
        saveToStorage();
      }
    });
  });
</script>

<style>
  .container {
    min-height: 100vh;
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .logo-subtitle-custom {
    text-align: center;
    margin: -1rem 0 2rem 0;
  }

  .logo-subtitle-custom h2 {
    font-family: var(--font-accent);
    font-size: 1.2rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    opacity: 0.7;
    font-weight: 400;
  }

  .combate-desc {
    font-family: var(--font-body);
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    margin-top: 0.5rem;
  }

  .combate-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .combate-setup {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .combate-subtitle {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    color: var(--color-text-accent);
    margin: 0 0 1rem 0;
  }

  .add-initiative-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .add-initiative-row input[type="text"] {
    flex: 2;
    min-width: 180px;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: 0.75rem 1rem;
    color: var(--color-text-primary);
    font-family: var(--font-body);
    font-size: 1rem;
  }

  .add-initiative-row input[type="number"] {
    width: 100px;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: 0.75rem 1rem;
    color: var(--color-text-primary);
    font-family: var(--font-body);
    font-size: 1rem;
    text-align: center;
  }

  .add-initiative-row input:focus {
    outline: none;
    border-color: var(--color-accent-primary);
    box-shadow: 0 0 8px rgba(139, 76, 141, 0.3);
  }

  .add-initiative-btn {
    padding: 0.75rem 1.25rem;
    background: linear-gradient(135deg, var(--color-accent-primary), var(--color-accent-glow));
    border: 2px solid var(--color-accent-primary);
    border-radius: 6px;
    color: white;
    font-family: var(--font-body);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .add-initiative-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(139, 76, 141, 0.4);
  }

  .combate-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .start-combat-btn,
  .reset-combat-btn,
  .export-combat-btn,
  .import-combat-btn {
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    background: var(--color-bg-primary);
    color: var(--color-text-primary);
    font-family: var(--font-body);
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .start-combat-btn {
    border-color: #4c8b5e;
    color: #7dccb5;
    min-width: 160px;
  }

  .start-combat-btn:hover {
    background: rgba(76, 139, 94, 0.2);
  }

  .start-combat-btn.combat-active {
    border-color: #c75c5c;
    color: #ff9999;
    background: rgba(199, 92, 92, 0.15);
  }

  .start-combat-btn.combat-active:hover {
    background: rgba(199, 92, 92, 0.25);
  }

  .reset-combat-btn:hover,
  .export-combat-btn:hover,
  .import-combat-btn:hover {
    border-color: var(--color-accent-primary);
    background: rgba(139, 76, 141, 0.1);
  }

  .combat-list-section {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .combat-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    min-height: 120px;
  }

  .combat-empty-msg {
    font-family: var(--font-body);
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    font-style: italic;
    margin: 1rem 0 0 0;
  }

  .combat-list-item {
    display: grid;
    grid-template-columns: 56px auto 1fr 72px;
    gap: 1rem;
    align-items: center;
    padding: 0.85rem 1.25rem;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 10px;
    transition: all 0.2s ease;
    margin-bottom: 0.5rem;
    border-left: 3px solid transparent;
  }

  .combat-list-item.clickable {
    cursor: pointer;
  }

  .combat-list-item:not(.clickable) {
    cursor: default;
  }

  .combat-list-item.clickable:hover {
    border-color: var(--color-accent-primary);
    background: rgba(139, 76, 141, 0.08);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .combat-list-item.selected {
    border-color: var(--color-accent-primary);
    border-left-color: var(--color-accent-primary);
    background: rgba(139, 76, 141, 0.15);
    box-shadow: 0 0 15px rgba(139, 76, 141, 0.2);
  }

  .combat-list-item.current-turn {
    border-left-color: #4caf50;
    font-weight: 600;
    box-shadow: 0 2px 15px rgba(76, 175, 80, 0.3);
    background: linear-gradient(90deg, rgba(76, 175, 80, 0.12) 0%, var(--color-bg-primary) 15%);
  }

  .combat-list-item.current-turn .combat-item-name {
    color: var(--color-accent-primary);
    font-weight: 700;
  }

  .combat-turn-indicator {
    font-size: 1.2rem;
    color: #4caf50;
    margin-right: 0.25rem;
    animation: pulse-turn 2s ease-in-out infinite;
  }

  @keyframes pulse-turn {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
  }

  .combat-item-order {
    font-family: var(--font-accent);
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    font-weight: 600;
    background: var(--color-bg-tertiary);
    padding: 0.35rem 0.5rem;
    border-radius: 6px;
    text-align: center;
    width: fit-content;
  }

  .combat-item-name {
    font-family: var(--font-body);
    color: var(--color-text-primary);
    font-size: 1rem;
  }

  .combat-list-item.clickable .combat-item-name {
    cursor: pointer;
  }

  .combat-item-initiative {
    font-family: var(--font-heading);
    color: var(--color-text-accent);
    font-size: 1.1rem;
    font-weight: 700;
    text-align: right;
  }

  .combat-detail-panel {
    display: flex;
    flex-direction: column;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 0;
    overflow: hidden;
  }

  .combat-detail-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid var(--color-border);
    background: var(--color-bg-primary);
  }

  .combat-detail-title {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    color: var(--color-text-accent);
    margin: 0;
  }

  .close-detail-btn {
    width: 32px;
    height: 32px;
    border: 1px solid var(--color-border);
    background: var(--color-bg-tertiary);
    color: var(--color-text-secondary);
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .close-detail-btn:hover {
    border-color: var(--color-accent-primary);
    color: var(--color-text-accent);
  }

  .combat-detail-notes {
    flex: 1;
    min-height: 200px;
    padding: 1.5rem;
    background: var(--color-bg-secondary);
    border: none;
    color: var(--color-text-primary);
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.6;
    resize: vertical;
  }

  .combat-detail-notes:focus {
    outline: none;
  }

  .combat-detail-notes::placeholder {
    color: var(--color-text-secondary);
    opacity: 0.6;
  }
</style>
