---
import Layout from '../layouts/Layout.astro';
import SaveLoad from '../components/SaveLoad.astro';
import QuickReferencePopup from '../components/QuickReferencePopup.astro';
import Logo from '../components/Logo.astro';
import Header from '../components/Header.astro';
import BasicInfo from '../components/BasicInfo.astro';
import Attributes from '../components/Attributes.astro';
import Skills from '../components/Skills.astro';
import Equipment from '../components/Equipment.astro';
import Abilities from '../components/Abilities.astro';
import Notes from '../components/Notes.astro';
import DiceRoller from '../components/DiceRoller.astro';
import LevelingSystem from '../components/LevelingSystem.astro';
import SanitySystem from '../components/SanitySystem.astro';
import Toast from '../components/Toast.astro';
---

<Layout title="[AP] - Ficha de Personagem">
  <QuickReferencePopup />
  <SanitySystem />
  <Toast />
  <div class="container" data-page="personagem">
    <SaveLoad />
    
    <Logo />
    
    <BasicInfo />
    
    <Header />
    
    <LevelingSystem />
    
    <div class="attributes-compact">
      <Attributes />
    </div>

    <div class="sheet-tabs-container">
      <div class="sheet-tabs" role="tablist" aria-label="Seções da ficha">
        <button type="button" class="sheet-tab active" role="tab" aria-selected="true" aria-controls="tab-pericias" id="tab-btn-pericias" data-tab="pericias">Perícias</button>
        <button type="button" class="sheet-tab" role="tab" aria-selected="false" aria-controls="tab-equipamentos" id="tab-btn-equipamentos" data-tab="equipamentos">Equipamentos</button>
        <button type="button" class="sheet-tab" role="tab" aria-selected="false" aria-controls="tab-habilidades" id="tab-btn-habilidades" data-tab="habilidades">Habilidades</button>
        <button type="button" class="sheet-tab" role="tab" aria-selected="false" aria-controls="tab-anotacoes" id="tab-btn-anotacoes" data-tab="anotacoes">Anotações</button>
      </div>
      <div class="sheet-tab-panels">
        <div id="tab-pericias" class="sheet-tab-panel active" role="tabpanel" aria-labelledby="tab-btn-pericias">
          <Skills />
        </div>
        <div id="tab-equipamentos" class="sheet-tab-panel" role="tabpanel" aria-labelledby="tab-btn-equipamentos" hidden>
          <Equipment />
        </div>
        <div id="tab-habilidades" class="sheet-tab-panel" role="tabpanel" aria-labelledby="tab-btn-habilidades" hidden>
          <Abilities />
        </div>
        <div id="tab-anotacoes" class="sheet-tab-panel" role="tabpanel" aria-labelledby="tab-btn-anotacoes" hidden>
          <Notes />
        </div>
      </div>
    </div>
    
    <DiceRoller />

    <footer class="footer">
      <p>© 2025 Anátema Profético - Sistema de RPG criado por João Vitor Gozzo Bruschi</p>
    </footer>
  </div>
</Layout>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.sheet-tab');
    const panels = document.querySelectorAll('.sheet-tab-panel');
    const STORAGE_KEY = 'anatema-sheet-active-tab';

    function activateTab(tabName) {
      tabs.forEach(tab => {
        const isActive = tab.dataset.tab === tabName;
        tab.classList.toggle('active', isActive);
        tab.setAttribute('aria-selected', String(isActive));
        tab.setAttribute('tabindex', isActive ? '0' : '-1');
      });
      panels.forEach(panel => {
        const panelId = panel.id;
        const expectedId = `tab-${tabName}`;
        const isActive = panelId === expectedId;
        panel.classList.toggle('active', isActive);
        panel.hidden = !isActive;
      });
      try {
        localStorage.setItem(STORAGE_KEY, tabName);
      } catch (e) {}
    }

    tabs.forEach(tab => {
      tab.addEventListener('click', () => activateTab(tab.dataset.tab));
      tab.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          activateTab(tab.dataset.tab);
        }
      });
    });

    const savedTab = localStorage.getItem(STORAGE_KEY);
    if (savedTab && ['pericias', 'equipamentos', 'habilidades', 'anotacoes'].includes(savedTab)) {
      activateTab(savedTab);
    }
  });
</script>

<style>
  .container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
    gap: 2rem;
  }

  .attributes-compact {
    max-width: 100%;
  }

  .attributes-compact .attributes-grid {
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 1rem;
  }

  .attributes-compact .attribute-card {
    padding: 1rem;
    gap: 0.5rem;
  }

  .attributes-compact .attribute-input {
    width: 60px;
    font-size: 1.5rem;
  }

  .sheet-tabs-container {
    display: flex;
    flex-direction: column;
    gap: 0;
    flex: 1;
    min-height: 0;
  }

  .sheet-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-border);
    margin-bottom: 0;
  }

  .sheet-tab {
    padding: 0.75rem 1.25rem;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-bottom: none;
    border-radius: 8px 8px 0 0;
    color: var(--color-text-secondary);
    font-family: var(--font-accent);
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .sheet-tab:hover {
    color: var(--color-text-accent);
    border-color: var(--color-border-glow);
    background: rgba(139, 76, 141, 0.1);
  }

  .sheet-tab.active {
    background: var(--color-bg-secondary);
    border-color: var(--color-accent-primary);
    color: var(--color-text-accent);
    font-weight: 600;
    margin-bottom: -2px;
    padding-bottom: calc(0.75rem + 2px);
    box-shadow: 0 -2px 10px rgba(139, 76, 141, 0.2);
    border-bottom: 2px solid var(--color-bg-secondary);
  }

  .sheet-tab-panels {
    flex: 1;
    min-height: 400px;
  }

  .sheet-tab-panel {
    display: none;
    opacity: 0;
    transition: opacity 0.25s ease;
  }

  .sheet-tab-panel.active {
    display: block;
    opacity: 1;
    animation: tabFadeIn 0.25s ease;
  }

  @keyframes tabFadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .footer {
    margin-top: auto;
    padding: 2rem 0;
    text-align: center;
    border-top: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
      gap: 1.5rem;
    }
  }
</style>
